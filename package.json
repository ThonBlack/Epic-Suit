{
    "name": "epic-suit-desktop",
    "productName": "Epic Suit",
    "version": "1.0.0",
    "description": "WhatsApp Status Scheduler Desktop App",
    "main": "electron/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "concurrently \"npm run client:dev\" \"wait-on tcp:5173 && npm start\"",
        "server:dev": "cd server && npm run dev",
        "client:dev": "cd client && npm run dev",
        "build": "npm run client:build && electron-builder",
        "client:build": "cd client && npm run build",
        "postinstall": "cd client && npm install && cd ../server && npm install && npx prisma generate"
    },
    "author": "Thon Black",
    "license": "ISC",
    "devDependencies": {
        "concurrently": "^8.0.0",
        "cross-env": "^7.0.0",
        "electron": "^28.0.0",
        "electron-builder": "^24.0.0",
        "wait-on": "^7.0.0"
    },
    "build": {
        "appId": "com.epicsuit.app",
        "productName": "Epic Suit",
        "publish": {
            "provider": "github",
            "owner": "ThonBlack",
            "repo": "Epic-Suit"
        },
        "win": {
            "target": "nsis",
            "icon": "client/public/favicon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "directories": {
            "output": "release-build"
        },
        "files": [
            "electron/**/*",
            "server/**/*",
            "client/dist-build/**/*",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "server",
                "to": "server",
                "filter": [
                    "**/*",
                    "!prisma/*.db",
                    "prisma/template.db",
                    "!sessions/**/*",
                    "!logs/**/*",
                    "!uploads/**/*"
                ]
            }
        ]
    },
    "dependencies": {
        "electron-log": "^5.4.3",
        "electron-updater": "^6.1.7"
    }
}
